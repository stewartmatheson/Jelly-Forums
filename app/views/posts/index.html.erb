<% title "Posts" %>

<% for post in @posts %>

  <div class="post">
    <div class="post_title"><h3><%= link_to post.title, post %></h3></div>
    <div class="post_body"><%=h post.body %></div>
    <p><%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %> <%= link_to "Edit", edit_post_path(post) %></p>
  </div>

<% end %>

<p><%= link_to "New Post", new_post_path %></p>
